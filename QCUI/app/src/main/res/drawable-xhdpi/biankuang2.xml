<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 填充 -->
    <solid android:color="@color/ttwhite" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="2.4dp"
        android:color="@color/orange1" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp"
        android:topLeftRadius="24dp"
        android:topRightRadius="24dp" /> <!-- 设置四个角的半径 -->

    <padding

        android:left="20dp"
        android:right="10dp"
        /> <!-- 设置各个方向的间隔 -->
</shape>